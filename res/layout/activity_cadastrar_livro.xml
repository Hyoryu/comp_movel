<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#ffffff">
    <TableRow>

        <EditText
            android:id="@+id/txtBookTitle"
            android:width="400dp"
            android:inputType="text"
            android:hint="Título"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/txtBookAuthor"
            android:inputType="text"
            android:hint="Autor"/>
    </TableRow>
    <TableRow>

        <EditText
            android:id="@+id/txtBookPublisher"
            android:inputType="text"
            android:hint="Editora"/>
    </TableRow>
    <TableRow>

        <EditText
            android:id="@+id/txtBookYear"
            android:inputType="number"
            android:hint="Ano de publicação"/>
    </TableRow>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">

        <ImageButton android:src="@drawable/cancelar"
            android:id="@+id/btnBookCancel"
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp" />

        <ImageButton android:src="@drawable/salvar"
            android:id="@+id/btnBookSave"
            android:text=" Salvar "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</TableLayout>